{
  "rules": {
    "messages": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["senderId", "receiverId", "timestamp"],
      "$messageId": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('senderId').val() == auth.uid || data.child('receiverId').val() == auth.uid)"
      }
    },
    "conversations": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$partnerId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}
